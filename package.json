{
  "name": "manage-social-messages-api",
  "version": "1.0.0",
  "main": "src/index.js",
  "type": "module",
  "imports": {
    "#@/*": "./src/*",
    "#@controllers/*": "./src/controllers/*",
    "#@enums/*": "./src/enums/*",
    "#@middleware/*": "./src/middleware/*",
    "#@models/*": "./src/models/*",
    "#@routes/*": "./src/routes/*",
    "#@services/*": "./src/services/*"
  },
  "scripts": {
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules -r dotenv/config\" mocha 'test/**/*.test.js' --timeout 30000",
    "test:integration": "cross-env NODE_OPTIONS=\"--experimental-vm-modules -r dotenv/config\" mocha 'test/**/*.integration.test.js' --timeout 30000",
    "test:integration:debug": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --inspect-brk -r dotenv/config\" mocha 'test/**/*.integration.test.js' --timeout 30000",
    "test:unit": "cross-env NODE_OPTIONS=\"--experimental-vm-modules -r dotenv/config\" mocha 'test/**/*.unit.test.js' --timeout 10000",
    "test:unit:debug": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --inspect-brk -r dotenv/config\" mocha 'test/**/*.unit.test.js' --timeout 10000",
    "dev": "node -r dotenv/config --watch --inspect src/index.js",
    "start": "node -r dotenv/config src/index.js",
    "type-check": "tsc -p .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:migrate": "npx --node-options=\"-r dotenv/config\" sequelize-cli db:migrate --config ./src/models/config.js --migrations-path ./src/models/migrations",
    "db:migrate:undo": "npx --node-options=\"-r dotenv/config\" sequelize-cli db:migrate:undo --config ./src/models/config.js --migrations-path ./src/models/migrations",
    "db:migrate:gen": "npx --node-options=\"-r dotenv/config\" sequelize-cli migration:generate --migrations-path ./src/models/migrations --config ./src/models/config.js --name",
    "db:seed": "npx --node-options=\"-r dotenv/config\" sequelize-cli db:seed:all --config ./src/models/config.js --seeders-path ./src/models/seeders",
    "db:seed:undo": "npx --node-options=\"-r dotenv/config\" sequelize-cli db:seed:undo --config ./src/models/config.js --seeders-path ./src/models/seeders",
    "db:seed:gen": "npx --node-options=\"-r dotenv/config\" sequelize-cli seed:generate --seeders-path ./src/models/seeders --config ./src/models/config.js --name"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "json-stringify-safe": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "chai": "^5.1.2",
    "cross-env": "^10.1.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "mocha": "^11.0.1",
    "prettier": "^3.6.2",
    "sequelize-cli": "^6.6.3",
    "typescript": "^5.9.3"
  }
}
